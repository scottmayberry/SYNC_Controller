<RelativeLayout
    android:id="@+id/climateLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ClimateActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/airQuality"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button"
                style="@style/ButtonText"
                android:text="Air Quality"
                android:onClick="viewAirQuality"/>
            <Button
                android:id="@+id/auto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button"
                style="@style/ButtonText"
                android:text="AUTO"
                android:onClick="autoPressed"/>
            <ImageButton
                android:id="@+id/power"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:scaleType="fitCenter"
                android:background="@drawable/button"
                android:layout_marginStart="2.5dp"

                android:src="@drawable/power"
                android:contentDescription="Power"
                android:onClick="powerPressed"/>
            <Button
                android:id="@+id/dual"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button"
                style="@style/ButtonText"
                android:text="DUAL"
                android:onClick="dualPressed"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.75"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/driverTempLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginEnd="5dp">
                <ImageButton
                    android:id="@+id/driverTempUp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:background="@drawable/button"
                    android:src="@drawable/red_arrow_up"
                    android:contentDescription="Increase driver's temperature"
                    android:onClick="driverTempUpPressed"/>
                <TextView
                    android:id="@+id/driverTempDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.75"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/gray_background"
                    style="@style/tempDisplayText"
                    android:text="Off"
                    android:gravity="center">
                </TextView>
                <ImageButton
                    android:id="@+id/driverTempDown"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/blue_arrow_down"
                    android:contentDescription="Decrease driver's temperature"
                    android:background="@drawable/button"
                    android:onClick="driverTempDownPressed"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginEnd="5dp">
                <LinearLayout
                    android:id="@+id/defrostMenuButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:clickable="true"
                    android:onClick="defrostMenuButtonPressed">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/defrostText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        style="@style/ButtonText"
                        android:text="Defrost" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                    <ImageView
                        android:id="@+id/defrostIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingEnd="12dp"
                        android:src="@drawable/menu"
                        android:contentDescription="Defrost menu image"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.75">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_background"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                        <ImageButton
                            android:id="@+id/upperBlower"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6"
                            android:scaleType="fitEnd"
                            android:background="@drawable/button"
                            android:src="@drawable/upper_blower"
                            android:paddingTop="10dp"
                            android:paddingEnd="5dp"
                            android:contentDescription="Upper blower"
                            android:onClick="upperBlowerPressed"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                    </LinearLayout>
                </RelativeLayout>
                <ImageButton
                    android:id="@+id/lowerBlower"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitEnd"
                    android:background="@drawable/button"
                    android:src="@drawable/lower_blower"
                    android:paddingBottom="5dp"
                    android:paddingEnd="20dp"
                    android:contentDescription="Lower blower"
                    android:onClick="lowerBlowerPressed"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginEnd="5dp">
                <ImageButton
                    android:id="@+id/fanUp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:background="@drawable/button"
                    android:src="@drawable/arrow_up"
                    android:contentDescription="Increase fan speed"
                    android:onClick="fanUpPressed"/>
                <ImageView
                    android:id="@+id/fanDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1.75"
                    android:scaleType="fitXY"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/gray_background"
                    android:src="@drawable/fan_display0">
                </ImageView>
                <ImageButton
                    android:id="@+id/fanDown"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:background="@drawable/button"
                    android:src="@drawable/arrow_down"
                    android:contentDescription="Decrease fan speed"
                    android:onClick="fanDownPressed"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageButton
                    android:id="@+id/passTempUp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:background="@drawable/button"
                    android:src="@drawable/red_arrow_up"
                    android:contentDescription="Increase passenger's temperature"
                    android:onClick="passTempUpPressed"/>
                <TextView
                    android:id="@+id/passTempDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.75"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/gray_background"
                    style="@style/tempDisplayText"
                    android:text="Off"
                    android:gravity="center">
                </TextView>
                <ImageButton
                    android:id="@+id/passTempDown"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:background="@drawable/button"
                    android:src="@drawable/blue_arrow_down"
                    android:contentDescription="Decrease passenger's temperature"
                    android:onClick="passTempDownPressed"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center">
            <Button
                android:id="@+id/refreshButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button"
                style="@style/ButtonText"
                android:text="Refresh"
                android:onClick="doRefresh"/>
            <Button
                android:id="@+id/ACButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button"
                style="@style/ButtonText"
                android:text="A/C"
                android:onClick="acPressed"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"/>

            <ImageButton
                android:id="@+id/recircButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/button"
                android:src="@drawable/recirc"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:onClick="recircPressed"
                android:contentDescription="Toggle air recirculation" />



        </LinearLayout>
    </LinearLayout>

</RelativeLayout>